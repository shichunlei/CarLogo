<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <style name="AppTheme.NoActionBar" parent="@style/BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--AppBar样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 标题字体样式-->
    <style name="Title_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- layout样式 -->
    <style name="layout_vertical_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:divider">@drawable/divider_line</item>
        <item name="android:showDividers">beginning|middle|end</item>
    </style>

    <!-- layout样式 -->
    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px_109</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/px_20</item>
        <item name="android:paddingLeft">@dimen/px_20</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- text样式 -->
    <style name="text_key_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/txt_color_deep</item>
        <item name="android:textSize">@dimen/px_30</item>
    </style>

    <!-- text样式 -->
    <style name="text_value_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@color/txt_color_9b</item>
        <item name="android:textSize">@dimen/px_28</item>
    </style>
</resources>
