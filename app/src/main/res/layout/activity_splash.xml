<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_color"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    tools:context=".view.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_500"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/px_80" />

    <ImageView
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_150"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_100"
        android:layout_marginTop="@dimen/px_50"
        android:text="数据来源于极速数据"
        android:textColor="@color/white" />
</LinearLayout>