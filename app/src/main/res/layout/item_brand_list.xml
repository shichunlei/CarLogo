<?xml version="1.0" encoding="utf-8"?>
<com.chingtech.library.widget.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/px_5"
    android:layout_marginLeft="@dimen/px_20"
    android:layout_marginRight="@dimen/px_20"
    android:layout_marginTop="@dimen/px_5"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/px_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/px_20">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginEnd="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"
            android:src="@drawable/icon_loading" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/txt_color_8"
            tools:text="奥迪" />
    </LinearLayout>
</com.chingtech.library.widget.RoundFrameLayout>